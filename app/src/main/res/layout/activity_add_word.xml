<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paulygon.listexperimentation.AddWordActivity">

    <EditText
        android:id="@+id/new_word"
        android:text=""
        android:hint="Type new word here"
        android:layout_margin="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_defn"
        android:text=""
        android:hint="Type the definition"
        android:layout_margin="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="addWordClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add this Word"
        />

</LinearLayout>
